{
  "compilerOptions": {
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strict": true,
    "module": "CommonJS",
    "target": "ES6",
    "resolveJsonModule": true,
    "newLine": "lf",
    "importHelpers": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
  },
  "exclude": ["node_modules"]
}
